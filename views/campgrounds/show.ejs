<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>

        <div class="col-md-9">
            <div class="img-thumbnail">
                <img src="<%= camps.image %>" alt="image" class="img-fluid">
                <div class="caption-full">
                    <h4 class="float-right">N<%= camps.price %>/Night</h4>
                    <h3><a href="#"><%= camps.name %></a></h3>
                    <p><%= camps.description %></p>
                    <p>
                        <em>Submitted by <%= camps.author ? camps.author.username : 'Unknown' %></em>
                    </p>
                    <div class="action">
                        <% if (currentUser && camps.author && camps.author.id && camps.author.id.equals(currentUser._id)) { %>
                        <a class="btn btn-xs btn-warning" href="/campgrounds/<%= camps._id %>/edit">Edit Campground</a>
                        <form action="/campgrounds/<%= camps._id %>?_method=DELETE" method="POST" id="align">
                            <button class="btn btn-xs btn-danger">Delete Campground</button>
                        </form>
                        <!-- <form action="/campgrounds/<%= camps._id %>?_method=DELETE" method="POST" id="align">
                            <button class="btn btn-xs btn-danger">Delete Campground</button>
                        </form> -->
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Comment Section -->
            <div class="card">
                <div class="card-header">
                    <div class="text-right">
                        <a class="btn btn-success" href="/campgrounds/<%= camps._id %>/comments/new">Add a comment</a>
                    </div>
                    <hr>
                    <% if (camps.comments && camps.comments.length > 0) { %>
                        <% camps.comments.forEach(function(comment) { %>
                            <div class="row">
                                <div class="col-md-12">
                                    <strong><%= comment.author ? comment.author.username : 'Unknown' %></strong>
                                    <!-- Ensure Moment.js is defined -->
                                    <span class="float-right">
                                        <% if (moment) { %>
                                            <%= moment(new Date(comment.createdAt)).fromNow() %>
                                        <% } else { %>
                                            Date not available
                                        <% } %>
                                    </span>
                                    <p><%= comment.text %></p>
                                    <div class="action">
                                        <% if (currentUser && comment.author && comment.author.id && comment.author.id.equals(currentUser._id)) { %>
                                        <a class="btn btn-sm btn-warning" href="/campgrounds/<%= camps._id %>/comments/<%= comment._id %>/edit">Edit</a>
                                        <form action="/campgrounds/<%= camps._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST" id="align">
                                            <button class="btn btn-sm btn-danger">Delete</button>
                                        </form>
                                        <!-- <form action="/campgrounds/<%= camps._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST id="align">
                                            <button class="btn btn-sm btn-danger">Delete</button>
                                        </form> -->
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p>No comments yet. Be the first to comment!</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>

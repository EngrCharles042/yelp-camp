<%- include ("../partials/header") %>

<div class="container">
    <h1 class="text-center">Edit <%= camp.name %></h1>

   <div style="width: 40%; margin: 30px auto;">
    <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="camp[name]" value="<%= camp.name %>">
        </div>
        <div class="form-group">
            <input class="form-control" type="number" name="camp[price]" value="<%= camp.price %>" min="100" step="0.5">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="camp[image]" value="<%= camp.image %>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="camp[description]" value="<%= camp.description %>">
        </div>
        <div class="form-group">
            <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit">
        </div>
    </form>
    <a href="/campgrounds">Go Back</a>
   </div>

</div>

<%- include ("../partials/footer") %>